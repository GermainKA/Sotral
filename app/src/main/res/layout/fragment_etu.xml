<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackG1"
    android:orientation="vertical"
    tools:context=".Views.Etudiant.EtudianLogonFragment">


    <FrameLayout
        android:id="@+id/whell_etu_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        aigestudio:layout_constraintEnd_toEndOf="parent"
        aigestudio:layout_constraintStart_toStartOf="parent"
        aigestudio:layout_constraintTop_toTopOf="parent">

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/wheel_picker_etu"
            android:layout_width="wrap_content"
            android:layout_height="374dp"
            android:layout_above="@+id/bntAchat_etu"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="60dp"
            android:background="@android:color/transparent"
            aigestudio:wheel_atmospheric="true"
            aigestudio:wheel_curtain_color="@android:color/transparent"
            aigestudio:wheel_curved="true"
            aigestudio:wheel_indicator="true"
            aigestudio:wheel_indicator_color="#c93b14"
            aigestudio:wheel_indicator_size="3dp"
            aigestudio:wheel_item_space="80dp"
            aigestudio:wheel_item_text_color="#cfd216"
            aigestudio:wheel_item_text_size="60dp"
            aigestudio:wheel_selected_item_text_color="@color/colorAccent2"
            aigestudio:wheel_curtain="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </FrameLayout>

    <Button
        android:id="@+id/bntHoraire_etu"
        android:layout_width="127dp"
        android:layout_height="@dimen/n5_bnt_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/backgroud_bnt1"
        android:text="Horaire"
        android:textColor="@color/md_white_1000"
        android:textSize="10dp"
        aigestudio:layout_constraintBottom_toBottomOf="parent"
        aigestudio:layout_constraintEnd_toEndOf="@+id/whell_etu_frame"
        aigestudio:layout_constraintTop_toBottomOf="@+id/bnt_map_etu"
        aigestudio:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bntAchat_etu"
        android:layout_width="127dp"
        android:layout_height="@dimen/n5_bnt_height"
        android:layout_above="@+id/bntHoraire_etu"
        android:layout_alignBaseline="@id/bntHoraire_etu"
        android:layout_marginHorizontal="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/bntHoraire_etu"
        android:background="@drawable/backgroud_bnt1"
        android:text="Achat Tickets"
        android:textColor="@color/md_white_1000"
        android:textSize="10dp"
        android:layout_marginBottom="30dp"
        aigestudio:layout_constraintBaseline_toBaselineOf="@+id/bntHoraire_etu"
        aigestudio:layout_constraintStart_toStartOf="@+id/whell_etu_frame" />

    <Button
        android:id="@+id/bnt_map_etu"
        android:layout_width="200dp"
        android:layout_height="@dimen/n5_bnt_height"
        android:layout_above="@id/whell_etu_frame"
        android:layout_alignBaseline="@id/bntHoraire_etu"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/backgroud_bnt1"
        android:text="Map"
        android:textColor="@color/md_white_1000"
        android:textSize="10dp"
        aigestudio:layout_constraintBottom_toBottomOf="parent"
        aigestudio:layout_constraintEnd_toEndOf="parent"
        aigestudio:layout_constraintStart_toStartOf="parent"
        aigestudio:layout_constraintTop_toTopOf="@+id/whell_etu_frame"
        aigestudio:layout_constraintVertical_bias="0.871" />


</android.support.constraint.ConstraintLayout>